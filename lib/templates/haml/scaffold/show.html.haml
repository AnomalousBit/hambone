.col-md-12
	%h2
		%i.fa.fa-graduation-cap.primary-color.fa-margin-lg
		<%= singular_table_name.titleize %>

	%p#notice= notice

	.row
		.col-md-12.margin-top-20
<% for attribute in attributes -%>
			%p
				%b <%= attribute.human_name %>:
				= @<%= singular_table_name %>.<%= attribute.name %>
<% end -%>

	.row
		.col-md-12.margin-top-20
			=link_to edit_<%= singular_table_name %>_path(@<%= singular_table_name %>), class: 'btn btn-primary' do
				%i.fa.fa-pencil.fa-margin-sm
				Edit

			=link_to :back, class: 'btn btn-default' do
				%i.fa.fa-chevron-left.fa-margin-sm
				Back
